  // Funci√≥n para generar IDs √∫nicos para los presets
function generateUniqueId() {
  const id = 'preset-' + Date.now() + '-' + Math.floor(Math.random() * 1000);
  console.log("Nuevo preset ID generado:", id);
  return id;
}

